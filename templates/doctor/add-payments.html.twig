		href="doctor-back/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet"/>
		<!-- Wait Me Css -->
		<link
		href="doctor-back/plugins/waitme/waitMe.css" rel="stylesheet"/>
